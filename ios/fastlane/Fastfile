# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane
fastlane_require 'dotenv'

default_platform(:ios)

before_all do |lane, options|
  Dotenv.load('../../.env')
  ensure_git_branch(branch: ENV['GIT_BRANCH'])
end

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :beta do
    build("5.8.2", 1)
    upload_to_testflight(skip_waiting_for_build_processing: true)
  end

  def build(version_number, build_number)
    match
    set_version(version_number, build_number)
    gym
  end

  def set_version(version_number, build_number)
    new_version_number = increment_version_number(
			version_number: version_number
		)
		build_number = increment_build_number(
		  build_number: build_number
		)
  end
  
end
