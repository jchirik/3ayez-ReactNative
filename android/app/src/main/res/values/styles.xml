<resources>

  <style name="SplashScreenTheme" parent="AppTheme">
    <item name="colorPrimaryDark">@color/status_bar_color</item>
  </style>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="android:windowIsTranslucent">true</item>
  </style>

  <!-- Base chat sdk theme. -->
  <style name="ZopimChatTheme" parent="ZopimChatTheme.Light">
    <!--Chat UI uses the toolbar so no need to show ActionBar-->
    <item name="windowActionBar">false</item>
    <!-- Customize chat theme here. -->
    <item name="colorAccent">@color/greenBlue</item>
    <item name="colorPrimary">@color/greenBlue</item>
    <item name="colorPrimaryDark">@color/darkGreenBlue</item>
  </style>

  <style name="no_agents_button">
    <item name="android:background">@color/greenBlue</item>
    <item name="android:padding">8dp</item>
    <item name="android:textColor">@color/offWhite</item>
  </style>

  <!--Customize toolbar that replaces action bar-->
  <style name="zopim_toolbar">
    <item name="android:background">?attr/colorPrimary</item>
    <item name="android:minHeight">?attr/actionBarSize</item>
    <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
  </style>






  <!--Customize chat colors-->
  <color name="chat_bubble_visitor">@color/greenBlue</color>

  <style name="chat_reply_icon">
    <item name="android:adjustViewBounds">true</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:layout_marginRight">0dp</item>
  </style>

  <!-- styles -->
  <!--Customize where chat widget appears-->
  <style name="chat_widget">
    <item name="anchor">bottom_left</item>
  </style>

  <style name="chat_widget_background">
    <item name="android:background">@drawable/icon_customer_service_widget</item>
  </style>

  <!-- dimensions -->
  <dimen name="widget_vertical_margin">16dp</dimen>
  <dimen name="widget_horizontal_margin">16dp</dimen>
  <dimen name="widget_width">50dp</dimen>
  <dimen name="widget_height">50dp</dimen>

  <!-- colors -->
  <color name="typing_indicator_primary">@color/offWhite</color>
  <color name="typing_indicator_secondary">@color/offWhite</color>

  <dimen name="typing_indicator_diameter">3dp</dimen>
  <dimen name="typing_indicator_spacing">1dp</dimen>

  <style name="_chat_widget_unread_notification">
    <item name="android:textSize">15sp</item>
    <item name="android:textColor">@color/offWhite</item>
  </style>
</resources>
